using System;

class SimpleQuiz 
{
    static void Main(string[] args) 
    {
        int score = 0;

        Console.WriteLine("Simple Quiz");
        Console.WriteLine("What is the capital of France?");
        Console.WriteLine("A) Berlin");
        Console.WriteLine("B) Paris");
        Console.WriteLine("C) London");
        Console.WriteLine("D) Rome");

        Console.Write("Enter answer: ");
        string answer = Console.ReadLine();

        if (answer.ToLower() == "b") 
        {
            score++;
        }

        Console.WriteLine("What is the largest planet in our solar system?");
        Console.WriteLine("A) Earth");
        Console.WriteLine("B) Saturn");
        Console.WriteLine("C) Jupiter");
        Console.WriteLine("D) Uranus");

        Console.Write("Enter answer: ");
        answer = Console.ReadLine();

        if (answer.ToLower() == "c") 
        {
            score++;
        }

        Console.WriteLine("Your final score is: " + score + "/2");
    }
}
